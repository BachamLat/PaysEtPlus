{% extends 'base.html.twig' %}

{% block title %}Municipality{% endblock %}

{% block body %}
    <h1> <small> Municipality </small> </h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ municipality.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ municipality.name }}</td>
            </tr>

            <tr>  <td colspan="2"> </td>  </tr>

            <tr>
                <th>Longitude</th>
                <th>Latitude</th>
            </tr>
            <tr>
                <td>{{ municipality.longitude }}</td>
                <td>{{ municipality.latitude }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('app_municipality_index') }}" role="button"> Retour </a>

    <a class="btn btn-default" href="{{ path('app_municipality_edit', {'id': municipality.id}) }}" role="button">Edit</a>

    {{ include('municipality/_delete_form.html.twig') }}
{% endblock %}
