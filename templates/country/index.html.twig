{% extends 'base.html.twig' %}

{% block title %}Country index{% endblock %}

{% block body %}
    
        <h1>Country index</h1>

        <table class="table table-striped table-hover" >
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Code</th>
                    <th>DialCode</th>
                    <th>Longitude</th>
                    <th>Latitude</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for country in countries %}
                <tr>
                    <td>{{ country.id }}</td>
                    <td>{{ country.name }}</td>
                    <td>{{ country.code }}</td>
                    <td>{{ country.dialCode }}</td>
                    <td>{{ country.longitude }}</td>
                    <td>{{ country.latitude }}</td>
                    <td>
                        <a href="{{ path('app_country_show', {'id': country.id}) }}">show</a>
                        <a href="{{ path('app_country_edit', {'id': country.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_country_new') }}">Create new</a>  </br> </br>

        <a href="{{ path('app_accueil') }}"> Back to Home </a>
    
{% endblock %}
