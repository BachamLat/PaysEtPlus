{% extends 'base.html.twig' %}

{% block title %}Department{% endblock %}

{% block body %}
    <h1> <small> Department </small> </h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ department.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ department.name }}</td>
            </tr>

            <tr>  <td colspan="2"> </td>  </tr>

            <tr >
                <th>Longitude</th>
                <th>Latitude</th>
            </tr>
            <tr>
                <td>{{ department.longitude }}</td>
                <td>{{ department.latitude }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('app_department_index') }}" role="button"> Retour </a>

    <a class="btn btn-default" href="{{ path('app_department_edit', {'id': department.id}) }}" role="button">Edit</a>

    {{ include('department/_delete_form.html.twig') }}
{% endblock %}
