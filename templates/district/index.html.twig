{% extends 'base.html.twig' %}

{% block title %}District index{% endblock %}

{% block body %}
    <h1>District index</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for district in districts %}
            <tr>
                <td>{{ district.id }}</td>
                <td>{{ district.name }}</td>
                <td>{{ district.longitude }}</td>
                <td>{{ district.latitude }}</td>
                <td>
                    <a href="{{ path('app_district_show', {'id': district.id}) }}"><i class="far fa-eye">  </i>show</a>
                    <a href="{{ path('app_district_edit', {'id': district.id}) }}"><i class="far fa-edit">  </i>edit </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% if maxPages > 1 %}
       <div class="center">
           <ul class="pagination pagination-sm">
            {# `«` arrow  #}
            <li {{ thisPage == 1 ? 'class="disabled"' }}>
                <a href="{{ path('app_district_index', {currentPage: thisPage-1 < 1 ? 1 : thisPage-1}) }}">«</a>
            </li>

            {# Render each page number #}
            {% for i in 1..maxPages %}
            <li {{ thisPage == i ? 'class="active"' }}>
            <a href="{{ path('app_district_index', {currentPage: i}) }}">{{ i }}</a>
            </li>
            {% endfor %}

            {# `»` arrow #}
            <li {{ thisPage == maxPages ? 'class="disabled"' }}>
                <a href="{{ path('app_district_index', {currentPage: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}">»</a>
            </li>
        </ul>
       </div>
    {% endif %}
 
    <a href="{{ path('app_district_new') }}">Create new</a> </br> </br>

    <a href="{{ path('app_accueil') }}"> Back to Home </a>

{% endblock %}
