{% extends 'base.html.twig' %}

{% block title %} Towns {% endblock %}

{% block body %}
    <h1> <small> List of Towns </small> </h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for town in towns %}
            <tr>
                <td>{{ town.id }}</td>
                <td>{{ town.name }}</td>
                <td>{{ town.longitude }}</td>
                <td>{{ town.latitude }}</td>
                <td> 
                    <a href="{{ path('app_town_show', {'id': town.id}) }}"><i class="glyphicon glyphicon-eye-open"> </i> </a>
                    <a href="{{ path('app_town_edit', {'id': town.id}) }}"><i class="glyphicon glyphicon-pencil"> </i> </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

      {% if maxPages > 1 %}
       <div class="center">
           <ul class="pagination pagination-sm ">
            {# `«` arrow  #}
            <li {{ thisPage == 1 ? 'class="disabled"' }}>
                <a href="{{ path('app_town_index', {currentPage: thisPage-1 < 1 ? 1 : thisPage-1}) }}">«</a>
            </li>

            {# Render each page number #}
            {% for i in 1..maxPages %}
            <li {{ thisPage == i ? 'class="active"' }}>
            <a href="{{ path('app_town_index', {currentPage: i}) }}">{{ i }}</a>
            </li>
            {% endfor %}

            {# `»` arrow #}
            <li {{ thisPage == maxPages ? 'class="disabled"' }}>
                <a href="{{ path('app_town_index', {currentPage: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}">»</a>
            </li>
        </ul>
       </div>
    {% endif %}

    <a href="{{ path('app_town_new') }}">Create new</a> </br> </br>

    <a href="{{ path('app_accueil') }}"> Back to Home </a>

{% endblock %}
