{% extends 'base.html.twig' %}

{% block title %}Town index{% endblock %}

{% block body %}
    <h1>Town index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for town in towns %}
            <tr>
                <td>{{ town.id }}</td>
                <td>{{ town.name }}</td>
                <td>{{ town.longitude }}</td>
                <td>{{ town.latitude }}</td>
                <td>
                    <a href="{{ path('app_town_show', {'id': town.id}) }}">show</a>
                    <a href="{{ path('app_town_edit', {'id': town.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_town_new') }}">Create new</a> </br> </br>

    <a href="{{ path('app_accueil') }}"> Back to Home </a>

{% endblock %}
