{% extends 'base.html.twig' %}

{% block title %}Town{% endblock %}

{% block body %}
    <h1> <small> Ville </small> </h1>

    <table class="table table-striped table-hover">
        <tbody>
            {# <tr>
                <th>Id</th>
                <td>{{ town.id }}</td>
            </tr> #}
            <tr>
                <th>Nom</th>
                <td>{{ town.name }}</td>
            </tr>

            
            {% if town.longitude == 0  %}
            {% else %}
            <tr>  <td colspan="2"> </td>  </tr>
            <tr>
                <th>Longitude</th>
                <th>Latitude</th>
            </tr>
            <tr>
