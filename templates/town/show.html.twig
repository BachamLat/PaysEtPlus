                {{ include('town/_delete_form.html.twig') }}
           
        </div>
        {% if town.longitude == 0  %}
        {% else %}
        <div class="map-example">
            <div class="row">
                <div class="col-lg">

                    <div id="map"> </div>
                   
                </div>
            </div>
        </div>
        {% endif %}

