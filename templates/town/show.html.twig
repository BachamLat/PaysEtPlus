{% extends 'base.html.twig' %}

{% block title %}Town{% endblock %}

{% block body %}
    <h1> <small> Town </small> </h1>

    <table class="table table-striped table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ town.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ town.name }}</td>
            </tr>

            <tr>  <td colspan="2"> </td>  </tr>

            <tr>
                <th>Longitude</th>
                <td>{{ town.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ town.latitude }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('app_town_index') }}" role="button"> Retour </a>

    <a class="btn btn-default" href="{{ path('app_town_edit', {'id': town.id}) }}" role="button"> Edit</a>

    {{ include('town/_delete_form.html.twig') }}
{% endblock %}
