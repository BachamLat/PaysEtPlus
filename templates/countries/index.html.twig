{% extends 'base.html.twig' %}

{% block title %}Countries{% endblock %}

{% block stylesheets %}  
    <style>
        
    </style>
{% endblock %}

{% block body %} 

    {% if countries|length > 0 %}

    <h1 class="tagged_Title"> <small> Liste des Pays </small> </h1>

            <table class="table table-striped table-hover" >
                            <thead>
                                <tr>
                                    {# <th>Id</th> #}
                                    <th>Nom</th>
                                    <th>Code</th>
                                    <th>Code de numérotation</th>
                                    <th>Longitude</th>
                                    <th>Latitude</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for countries in countries %}
                                <tr>
                                    {# <td>{{ countries.id }}</td> #}
                                    <td>{{ countries.name }}</td>
                                    <td>{{ countries.code }}</td>
                                    <td>{{ countries.dialCode }}</td>
                                    <td>{{ countries.longitude }}</td>
                                    <td>{{ countries.latitude }}</td>
                                    <td>
                                        <a href="{{ path('app_countries_show', {'id': countries.id}) }}">  <i class="glyphicon glyphicon-eye-open">  </i> </a>
                                        <a href="{{ path('app_countries_edit', {'id': countries.id}) }}"> <i class="glyphicon glyphicon-pencil"> </i> </a>
                                    </td>
                                </tr>

                            {% else %}
                                <tr>
                                    <td colspan="7"> Aucun enregistrement trouvé</td>
                                </tr>
                            {% endfor %}

                            </tbody>
                    
            </table>


    {% if maxPages > 1 %}
       <div class="center">
           <ul class="pagination pagination-sm">
            {# `«` arrow  #}
            <li {{ thisPage == 1 ? 'class="disabled"' }}>
                <a href="{{ path('app_countries_index', {currentPage: thisPage-1 < 1 ? 1 : thisPage-1}) }}">«</a>
            </li>

            {# Render each page number #}
            {% for i in 1..maxPages %}
            <li {{ thisPage == i ? 'class="active"' }}>
            <a href="{{ path('app_countries_index', {currentPage: i}) }}">{{ i }}</a>
            </li>
            {% endfor %}

            {# `»` arrow #}
            <li {{ thisPage == maxPages ? 'class="disabled"' }}>
                <a href="{{ path('app_countries_index', {currentPage: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}">»</a>
            </li>
        </ul>
       </div>
    {% endif %}


    {% endif %}        


    <div class="container-fluid">
        <div class="row">
            <div class="pull-left">
                <a class="btn btn-default" href="{{ path('app_countries_new') }}" role="button"> Nouveau Pays </a> 
            </div>

            <div class="pull-right">
                <a class="btn btn-default" href="{{ path('app_accueil') }}" role="button"> Retour </a>     <br> <br>    
            </div>
        </div>

    </div>

    
{% endblock %}
