{% extends 'base.html.twig' %}

{% block title %}Countries index{% endblock %}

{% block body %}
    
        <h1>Countries index</h1>

        <table class="table table-striped table-hover" >
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Code</th>
                    <th>DialCode</th>
                    <th>Longitude</th>
                    <th>Latitude</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for countries in countries %}
                <tr>
                    <td>{{ countries.id }}</td>
                    <td>{{ countries.name }}</td>
                    <td>{{ countries.code }}</td>
                    <td>{{ countries.dialCode }}</td>
                    <td>{{ countries.longitude }}</td>
                    <td>{{ countries.latitude }}</td>
                    <td>
                        <a href="{{ path('app_countries_show', {'id': countries.id}) }}">show</a>
                        <a href="{{ path('app_countries_edit', {'id': countries.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_countries_new') }}">Create new</a>  </br> </br>

        <a href="{{ path('app_accueil') }}"> Back to Home </a>
    
{% endblock %}
