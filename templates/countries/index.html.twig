{% extends 'base.html.twig' %}

{% block title %}Countries index{% endblock %}

{% block body %} 

  {% if countries|length > 0 %}

    <h1>  Countries index </h1>

            <table class="table table-striped table-hover" >
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Code</th>
                                    <th>DialCode</th>
                                    <th>Longitude</th>
                                    <th>Latitude</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for countries in countries %}
                                <tr>
                                    <td>{{ countries.id }}</td>
                                    <td>{{ countries.name }}</td>
                                    <td>{{ countries.code }}</td>
                                    <td>{{ countries.dialCode }}</td>
                                    <td>{{ countries.longitude }}</td>
                                    <td>{{ countries.latitude }}</td>
                                    <td>
                                        <a href="{{ path('app_countries_show', {'id': countries.id}) }}">  <i class="far fa-eye">  </i> show </a>
                                        <a href="{{ path('app_countries_edit', {'id': countries.id}) }}"> <i class="far fa-edit"> </i> edit </a>
                                    </td>
                                </tr>

                            {% else %}
                                <tr>
                                    <td colspan="7">no records found</td>
                                </tr>
                            {% endfor %}

                            </tbody>
                    
            </table>


    {% if maxPages > 1 %}
       <div class="center">
           <ul class="pagination pagination-sm">
            {# `«` arrow  #}
            <li {{ thisPage == 1 ? 'class="disabled"' }}>
                <a href="{{ path('app_countries_index', {currentPage: thisPage-1 < 1 ? 1 : thisPage-1}) }}">«</a>
            </li>

            {# Render each page number #}
            {% for i in 1..maxPages %}
            <li {{ thisPage == i ? 'class="active"' }}>
            <a href="{{ path('app_countries_index', {currentPage: i}) }}">{{ i }}</a>
            </li>
            {% endfor %}

            {# `»` arrow #}
            <li {{ thisPage == maxPages ? 'class="disabled"' }}>
                <a href="{{ path('app_countries_index', {currentPage: thisPage+1 <= maxPages ? thisPage+1 : thisPage}) }}">»</a>
            </li>
        </ul>
       </div>
    {% endif %}


{% endif %}        
        <a href="{{ path('app_countries_new') }}">Create new</a>  </br> </br>

        <a href="{{ path('app_accueil') }}"> Back to Home </a>         
        
    
{% endblock %}
